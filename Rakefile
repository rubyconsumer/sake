  p.url          = "http://errtheblog.com/"
  p.author       = 'Chris Wanstrath'
  p.email        = "chris@ozmm.org"
  p.extra_deps = {'ParseTree' => '>= 2.1.1', 'ruby2ruby' => '>= 1.1.8'}
end
